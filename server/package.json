{
  "name": "server-for-typescript-react-redux-blog",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthewkeil/typescript-react-redux-blog.git"
  },
  "author": "Matthew Keil",
  "license": "MIT",
  "scripts": {
    "clean:db": "rimraf .db && mkdir .db",
    "clean:build": "rimraf .build && mkdir .build",
    "clean:results": "rimraf test/results && mkdir test/results",
    "clean:all": "npm run clean:build & npm run clean:results & npm run clean:db",
    "serve:db": "mongod --dbpath=.db",
    "serve:api": "nodemon .build/server/src/index.js",
    "serve:all": "npm run serve:db & npm run serve:api",
    "tsc": "../node_modules/typescript/bin/tsc --project tsconfig.json",
    "tsc:once": "npm run clean:build && npm run tsc",
    "tsc:watch": "npm run tsc -- -w",
    "mocha": "../node_modules/.bin/mocha --recursive .build/**/*.spec.js",
    "mocha:once": "npm run tsc:once && npm run mocha -- --reporter mochawesome --reporter-options reportDir=test/results/$(date +%F)/$(date +%T),reportFilename=index",
    "mocha:watch" : "npm run mocha -- --watch --reporter min",
    "prestart": "npm run mocha:once",
    "start": "npm run serve:all & npm run tsc:watch & npm run mocha:watch",
    "test": "npm run mocha:once"
  },
  "nodemonConfig": {
    "verbose": true,
    "delay": 1000,
    "watch": ".build",
    "ignore": [
      ".build/**/*.spec.js",
      ".build/**/*.js.map"
    ]
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "connect-mongo": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "helmet": "^3.12.0",
    "jsonwebtoken": "^8.2.0",
    "mongodb": "^3.0.5",
    "morgan": "^1.9.0",
    "nodemon": "^1.17.2",
    "passport": "^0.4.0",
    "serve-favicon": "^2.4.5",
    "serve-static": "^1.13.2",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/compression": "0.0.36",
    "@types/connect-mongo": "0.0.35",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/helmet": "0.0.37",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/mocha": "^5.0.0",
    "@types/mongodb": "^3.0.17",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.1",
    "@types/passport": "^0.4.3",
    "@types/serve-favicon": "^2.2.30",
    "@types/serve-static": "^1.13.1",
    "@types/shortid": "0.0.29",
    "@types/sinon": "^4.3.0",
    "chai": "^4.1.2",
    "mocha": "^5.0.5",
    "mochawesome": "^3.0.2",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.8",
    "typescript": "^2.8.3"
  }
}
